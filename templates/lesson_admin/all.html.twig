{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <ul class="collection">
                    {% for lesson in lessons %}
                        <li class="collection-item">
                            <div>
                                {{ lesson.name }} -
                                <a href="{{ path('lesson_update_intro', {id: lesson.content.id}) }}"><i class="material-icons tiny">create</i> Intro</a> -
                                {% for part in lesson.content.parts %}
                                <a href="{{ path('lesson_update_part', {id: part.id}) }}"><i class="material-icons tiny">create</i> Partie {{ loop.index }} {{ part.title }}</a> -
                                {% endfor %}
                                <a href="{{ path('lesson_update_final', {id: lesson.content.id}) }}"><i class="material-icons tiny">create</i> final</a>
                            </div>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

{% endblock %}

